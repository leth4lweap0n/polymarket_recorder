# Kayıt aralığı (dakika); 5-15 arası önerilir
RECORD_INTERVAL_MINUTES=5

# Order book derinliği (kaç seviye)
ORDERBOOK_DEPTH=10

# Kayıt döngüsü başına çekilecek maksimum tick (işlem) sayısı
TICK_FETCH_LIMIT=100

# JSON snapshot dosyalarının kaydedileceği ana klasör
DATA_DIR=data

# Polymarket CLOB API URL
CLOB_API_URL=https://clob.polymarket.com

# Polymarket Gamma API URL
GAMMA_API_URL=https://gamma-api.polymarket.com

# İstekler arası bekleme (saniye) - rate limiting
API_RATE_LIMIT_SLEEP=0.5

# Bağlantı zaman aşımı (saniye)
API_CONNECT_TIMEOUT=10

# Okuma zaman aşımı (saniye)
API_READ_TIMEOUT=30

# Maksimum yeniden deneme sayısı
API_MAX_RETRIES=3

# Log seviyesi: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log dosya yolu
LOG_FILE=logs/polymarket_recorder.log

# Log dosyası maksimum boyutu (byte)
LOG_MAX_BYTES=10485760

# Yedek log dosyası sayısı
LOG_BACKUP_COUNT=5
